<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- GUI elements for main UI window -->

<GridPane fx:id="_grid" alignment="center" hgap="10" prefHeight="800.0" prefWidth="800.0" stylesheets="@style.css"
          vgap="10" xmlns="http://javafx.com/javafx/8.0.192" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="600.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="150.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="700.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="200.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <HBox alignment="CENTER">
        <VBox alignment="CENTER" prefWidth="500.0" spacing="10.0">

            <VBox>
                <Label text="Sequence 1"/>
                <TextField fx:id="_textField_sequence1" focusTraversable="false" prefWidth="100.0"
                           promptText="e.g. ACTAA" text="ACTAA"/>
            </VBox>

            <VBox>
                <Label text="Sequence 2"/>
                <TextField fx:id="_textField_sequence2" focusTraversable="false" prefWidth="100.0"
                           promptText="e.g. CCTT" text="CCTT"/>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </VBox>
            <HBox.margin>
                <Insets right="20.0"/>
            </HBox.margin>
        </VBox>
        <HBox spacing="20.0">
            <VBox alignment="CENTER_RIGHT" prefWidth="100.0" spacing="10.0">
                <VBox>
                    <Label text="Match"/>
                    <TextField fx:id="_textField_match" focusTraversable="false" prefWidth="100.0" promptText="5"
                               text="5"/>
                </VBox>
                <VBox>
                    <Label text="Mismatch"/>
                    <TextField fx:id="_textField_mismatch" focusTraversable="false" prefWidth="100.0" promptText="-3"
                               text="-3"/>
                </VBox>
            </VBox>
            <VBox alignment="CENTER_RIGHT" prefWidth="100.0" spacing="10.0">
                <VBox>
                    <Label text="Gap"/>
                    <TextField fx:id="_textField_gap" focusTraversable="false" prefWidth="100.0" promptText="-2"
                               text="-2"/>
                </VBox>
                <VBox>
                    <Label text="Mismatch" visible="false"/>
                    <TextField fx:id="_textField_start1" focusTraversable="false" prefWidth="100.0" promptText="e.g. 3"
                               visible="false"/>
                </VBox>
            </VBox>
        </HBox>
    </HBox>
    <ScrollPane fx:id="_scrollPane" prefHeight="500.0" prefWidth="700.0" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
        <GridPane fx:id="_grid_output" alignment="CENTER" prefHeight="408.0" prefWidth="778.0"/>
    </ScrollPane>
    <VBox GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets bottom="20.0"/>
        </GridPane.margin>
        <HBox alignment="CENTER" prefHeight="150.0" prefWidth="760.0">
            <TextArea fx:id="_textArea_output" editable="false" focusTraversable="false" prefHeight="200.0"
                      prefWidth="760.0" text="The current data is the class example and just here for convenience.">
                <font>
                    <Font name="Courier New Bold" size="14.0"/>
                </font>
            </TextArea>
        </HBox>
        <HBox alignment="BOTTOM_RIGHT" prefHeight="50.0">
            <Button fx:id="_button_calculate" focusTraversable="false" mnemonicParsing="false" prefWidth="130.0"
                    text="Calculate">
                <HBox.margin>
                    <Insets right="20.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </VBox>
</GridPane>
